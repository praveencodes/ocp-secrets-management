{
  "$schema": "./scripts/crd-sources.schema.json",
  "description": "CRD sources from upstream projects. Update ref to track specific versions.",
  "sources": [
    {
      "name": "cert-manager",
      "repo": "cert-manager/cert-manager",
      "ref": "v1.14.0",
      "crds": [
        {
          "file": "deploy/crds/crd-certificates.yaml",
          "kind": "Certificate",
          "group": "cert-manager.io",
          "version": "v1"
        },
        {
          "file": "deploy/crds/crd-issuers.yaml",
          "kind": "Issuer",
          "group": "cert-manager.io",
          "version": "v1"
        },
        {
          "file": "deploy/crds/crd-clusterissuers.yaml",
          "kind": "ClusterIssuer",
          "group": "cert-manager.io",
          "version": "v1"
        },
        {
          "file": "deploy/crds/crd-certificaterequests.yaml",
          "kind": "CertificateRequest",
          "group": "cert-manager.io",
          "version": "v1"
        }
      ]
    },
    {
      "name": "external-secrets",
      "repo": "external-secrets/external-secrets",
      "ref": "v0.9.0",
      "crds": [
        {
          "file": "config/crds/bases/external-secrets.io_externalsecrets.yaml",
          "kind": "ExternalSecret",
          "group": "external-secrets.io",
          "version": "v1beta1"
        },
        {
          "file": "config/crds/bases/external-secrets.io_secretstores.yaml",
          "kind": "SecretStore",
          "group": "external-secrets.io",
          "version": "v1beta1"
        },
        {
          "file": "config/crds/bases/external-secrets.io_clustersecretstores.yaml",
          "kind": "ClusterSecretStore",
          "group": "external-secrets.io",
          "version": "v1beta1"
        },
        {
          "file": "config/crds/bases/external-secrets.io_clusterexternalsecrets.yaml",
          "kind": "ClusterExternalSecret",
          "group": "external-secrets.io",
          "version": "v1beta1"
        },
        {
          "file": "config/crds/bases/external-secrets.io_pushsecrets.yaml",
          "kind": "PushSecret",
          "group": "external-secrets.io",
          "version": "v1alpha1"
        }
      ]
    },
    {
      "name": "secrets-store-csi",
      "repo": "kubernetes-sigs/secrets-store-csi-driver",
      "ref": "v1.4.0",
      "crds": [
        {
          "file": "config/crd/bases/secrets-store.csi.x-k8s.io_secretproviderclasses.yaml",
          "kind": "SecretProviderClass",
          "group": "secrets-store.csi.x-k8s.io",
          "version": "v1"
        },
        {
          "file": "config/crd/bases/secrets-store.csi.x-k8s.io_secretproviderclasspodstatuses.yaml",
          "kind": "SecretProviderClassPodStatus",
          "group": "secrets-store.csi.x-k8s.io",
          "version": "v1"
        }
      ]
    }
  ]
}
